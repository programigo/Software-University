<section id="viewEditAd" class="viewEditAd">
    <h1 class="titleForm">Edit existing advertisement</h1>
    <form id="formEditAd" class="form">
        <div><input type="hidden" name="_id" value="{{product._id}}" required/></div>
        <div><input type="hidden" name="publisher" value="{{product.publisher}}" required/></div>
        <!--<div><input type="hidden" name="url" required/></div>-->
        <div><input type="hidden" name="createdAt" value="{{product.createdAt}}" required/></div>
        <div>Title:</div>
        <div><input type="text" name="title" value="{{product.title}}" required/></div>
        <div>Description:</div>
        <div><textarea name="description" type="textarea" rows="10" required>{{product.description}}</textarea></div>
        <div>Price:</div>
        <div><input type="number" step="0.01" name="price" value="{{product.price}}" required/></div>
        <div>Picture URL:</div>
        <div><input type="text" name="imageUrl" value="{{product.imageUrl}}" required/></div>
        <div><input type="button" id="buttonEditAd" value="Edit"/></div>
    </form>
</section>