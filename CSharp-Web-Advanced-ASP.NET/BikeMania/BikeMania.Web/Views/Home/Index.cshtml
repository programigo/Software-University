@model BikeListingViewModel

@{
    ViewData["Title"] = "Home";
}

<div id="myCarousel" class="carousel slide home-carousel" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="http://dragbicycles.com/wp-content/uploads/2015/05/Drag_Logo_Slogan.jpg" alt="Drag" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Find out more information about Drag and their products.
                    <a class="btn btn-default" href="https://dragbicycles.com/bg/">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://thehubcycleworks.co.uk/wp-content/uploads/2015/04/trek-bicycle-logo.jpg" alt="Trek" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Trek official site.
                    <a class="btn btn-default" href="https://www.trekbikes.com/">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://static1.squarespace.com/static/51b7f759e4b06e4c41754eab/t/51b96503e4b05de1d5eef0df/1482786000601/Logo-Pinarello-2004_1.png" alt="Pinarello" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Check out the newest from Pinarello.
                    <a class="btn btn-default" href="http://www.pinarello.com/en">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="http://www.bianchiusa.com/store/media/catalog/product/cache/1/image/9df78eab33525d08d6e5fb8d27136e95/p/a/passioneceleste.jpg" alt="Bianchi" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Bianchi bikes official site.
                    <a class="btn btn-default" href="https://www.bianchi.com/global/home/home.aspx">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr />

<h1><strong>Newest offers from our authorized sellers</strong></h1>
<br />
<div class="row bike-listings">
    @await Html.PartialAsync("_BikeListingsPartial", Model.Bikes)
</div>