@using Microsoft.AspNetCore.Identity
@using BikeMania.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="glyphicon glyphicon-user">@UserManager.GetUserName(User)</a>
            </li>
            <li><a asp-area="" asp-controller="ShoppingCart" asp-action="Items" class="glyphicon glyphicon-shopping-cart">Cart</a></li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link glyphicon glyphicon-log-out">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="glyphicon glyphicon-registration-mark" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a class="glyphicon glyphicon-log-in" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}
