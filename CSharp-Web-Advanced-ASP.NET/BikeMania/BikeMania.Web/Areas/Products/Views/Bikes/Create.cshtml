@model BikeFormModel

@{
    ViewData["Title"] = "Add Bike";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2 align="center">@ViewData["Title"]</h2>
        <br />

        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#bikeType").change(function () {
                    if ($(this).val() == "R") {
                        $("#roadBikeBarTape").show();
                    } else {
                        $("#roadBikeBarTape").hide();
                    }
                    if ($(this).val() == "M") {
                        $("#mountainBikeBrakeLevers").show();
                    } else {
                        $("#mountainBikeBrakeLevers").hide();
                    }
                    if ($(this).val() == "E") {
                        $("#electricBikeBatteryMake").show();
                        $("#electricBikeBatteryPower").show();
                    } else {
                        $("#electricBikeBatteryMake").hide();
                        $("#electricBikeBatteryPower").hide();
                    }
                    if ($(this).val() == "S") {
                        $("#suspensionMountainBikeRearShockMake").show();
                    } else {
                        $("#suspensionMountainBikeRearShockMake").hide();
                    }
                    if ($(this).val() == "K") {
                        $("#kidsBikeKickstand").show();
                    } else {
                        $("#kidsBikeKickstand").hide();
                    }
                });
            });
        </script>
        <span><strong>Bike Type: </strong></span>
        <select id="bikeType">
            <option value="R">Road</option>
            <option value="M">Mountain</option>
            <option value="E">Electric</option>
            <option value="S">Suspension Mountain</option>
            <option value="K">Kids</option>
        </select>
        <br />
        <br />

        <form method="post">
            <div class="form-group">
                <label asp-for="Make"></label>
                <select asp-for="Make" asp-items="Html.GetEnumSelectList<Make>()" class="form-control"></select>
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrameSize"></label>
                <input asp-for="FrameSize" class="form-control" />
                <span asp-validation-for="FrameSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WheelesMake"></label>
                <input asp-for="WheelesMake" class="form-control" />
                <span asp-validation-for="WheelesMake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ForkMake"></label>
                <input asp-for="ForkMake" class="form-control" />
                <span asp-validation-for="ForkMake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiresMake"></label>
                <input asp-for="TiresMake" class="form-control" />
                <span asp-validation-for="TiresMake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftersMake"></label>
                <input asp-for="ShiftersMake" class="form-control" />
                <span asp-validation-for="ShiftersMake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrontDerailleur"></label>
                <input asp-for="FrontDerailleur" class="form-control" />
                <span asp-validation-for="FrontDerailleur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RearDerailleur"></label>
                <input asp-for="RearDerailleur" class="form-control" />
                <span asp-validation-for="RearDerailleur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chain"></label>
                <input asp-for="Chain" class="form-control" />
                <span asp-validation-for="Chain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Saddle"></label>
                <input asp-for="Saddle" class="form-control" />
                <span asp-validation-for="Saddle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Handlebar"></label>
                <input asp-for="Handlebar" class="form-control" />
                <span asp-validation-for="Handlebar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brakes"></label>
                <input asp-for="Brakes" class="form-control" />
                <span asp-validation-for="Brakes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div id="mountainBikeBrakeLevers" class="form-group" style="display: none">
                <label asp-for="BrakeLevers"></label>
                <input asp-for="BrakeLevers" class="form-control" />
                <span asp-validation-for="BrakeLevers" class="text-danger"></span>
            </div>
            <div id="electricBikeBatteryMake" class="form-group" style="display: none">
                <label asp-for="BatteryMake"></label>
                <input asp-for="BatteryMake" class="form-control" />
                <span asp-validation-for="BatteryMake" class="text-danger"></span>
            </div>
            <div id="electricBikeBatteryPower" class="form-group" style="display: none">
                <label asp-for="BatteryPower"></label>
                <input asp-for="BatteryPower" class="form-control" />
                <span asp-validation-for="BatteryPower" class="text-danger"></span>
            </div>
            <div id="roadBikeBarTape" class="form-group" style="display: none">
                <label asp-for="BarTape"></label>
                <input asp-for="BarTape" class="form-control" />
                <span asp-validation-for="BarTape" class="text-danger"></span>
            </div>
            <div id="suspensionMountainBikeRearShockMake" class="form-group" style="display: none">
                <label asp-for="RearShockMake"></label>
                <input asp-for="RearShockMake" class="form-control" />
                <span asp-validation-for="RearShockMake" class="text-danger"></span>
            </div>
            <div id="kidsBikeKickstand" class="form-group" style="display: none">
                <label asp-for="Kickstand"></label>
                <input asp-for="Kickstand" class="form-control" />
                <span asp-validation-for="Kickstand" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Add Bike</button>
        </form>
    </div>
    </div>


    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
