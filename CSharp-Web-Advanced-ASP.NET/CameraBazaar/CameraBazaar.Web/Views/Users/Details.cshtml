                        <div class="w3-panel table-bordered">
                            <div><img src="@camera.ImageUrl" width="200" /></div>
                            <div><strong>@camera.Make @camera.Model $</strong>@camera.Price</div>
                            <div>
                                <a href="/cameras/@camera.Id">Details</a>
                                @if (camera.Quantity > 0)
                                {
                                    <strong class="text-success">IN STOCK</strong>
